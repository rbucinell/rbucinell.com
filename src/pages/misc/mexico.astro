---
import BaseLayout from '../../layouts/BaseLayout.astro';

const config = {
    title: "Mexico 2022 Photos",
    breadcrumbs: [
        {fa:"home", text:"Home", url:"/"},
        {fa:"sun", text:"Mexico photos", url:"mexico.html"}
    ],
    page: {
        title: 'Mexico 2022 Photos',
        small: 'via Ocean Tours'
    }
};
let startImage = 10001;
let endImage = 11124;
let items = [...Array(endImage - startImage + 1).keys()].map(x => x + startImage);

---
<BaseLayout config={config}>
    <div class="alert alert-success">Download the entire albumn (1125 pics)<a class="alert-link" href="https://drive.google.com/file/d/1epxRiDddmfkmGldrGgeUTkcNXu0yp9zp/view?usp=sharing">&nbsp;here.</a></div>
    <div class="carousel slide carousel-fade" id="slidshow" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active"><img class="d-block w-100" src="/img/mexico/mexico10000.jpg" alt="picture 0 from mexico`"/></div>
        {items.map( i => (<div class="carousel-item">
            <img class="d-block w-100" loading="lazy" src={`/img/mexico/mexico${i}.jpg`} alt={`picture #${i} from mexico`}/>
        </div>) )}
      </div><a class="carousel-control-prev" href="#slidshow" role="button" data-slide="prev"><span class="carousel-control-prev-icon" aria-hidden="true"><span class="sr-only">Previous</span></span></a><a class="carousel-control-next" href="#slidshow" role="button" data-slide="next"><span class="carousel-control-next-icon" aria-hidden="true"><span class="sr-only">Next</span></span></a>
    </div>
</BaseLayout>
