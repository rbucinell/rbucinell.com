                sequences = {
                    afc: {
                        q1:[0,1,2,4,5,6,7,3,8,9],
                        q2:[9,0,1,3,4,5,6,2,7,8],
                        q3:[8,9,0,4,5,6,7,8,9,3],
                        q4:[5,6,7,8,9,0,1,2,3,4],
                    },
