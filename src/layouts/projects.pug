                {fa:"alert-triangle", text:"Active", url:"#"}
            ],
            pageh1: {
                title: 'Active Projects',
                small: 'Work In Progress...'
            }
        }
block content
    p.lead Just some projects I'm working on, there is no guarantee that they are in a good working state 
    table#projTable.table.table-condensed.table-hover.table-striped
        thead.thead-dark
            tr
                th Project Name
                th Project Index / Link
        tbody

block scripts
    script.
        function createProjectObject( proj )
        {
            var template = `<tr><td>${proj.name}</td><td>`;
            if( proj.hasIndex)
                template += `<a href="${proj.path}index.html" >${proj.path}</a>`;
            else
                template += proj.path;
            template += `</td></tr>`;
            $(`#projTable tbody`).append(template);
        }

        $(function(){
            $.getJSON('projects/projects.json',function(json){
                temp1 = json;
                for(var key in json)
                    createProjectObject(json[key]);
            });
        });