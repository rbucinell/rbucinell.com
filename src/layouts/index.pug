extends partials/layout.pug
block config
    -
        var pageConfig = {
            title: "Ryan Bucinell - Homepage",
            breadcrumbs: [
                {fa:"home", text:"Home", url:"index.html"},
                {fa:"layout", text:"News", url:"#"}
            ],
            pageh1: {
                title: 'News',
                small: 'latest news and updates'
            }
        }
block content

    mixin newsitem( icon, date, message)
        .row.mt-2
            .col-lg-12
                .card
                    .card-body
                        .card-text 
                            i( data-feather=`${icon}`)
                            
                            span &nbsp;!{message}
                            span.badge.badge-secondary.float-right #{date}
    +newsitem("check-square",   "2021-01-23", `For Ryder's <i>baby sprinkle<i> we are doing Super Bowl squares. See <a href="misc/squares.html">the board here.</a>`)
