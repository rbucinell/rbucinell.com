---
const opacityStyle = `opacity: ${Astro.props.opacity || 0.33};`
---
<div class="col">
    <a href={Astro.props.url}>
        <div class="card shadow h-100 bg-light text-dark btn btn-outline-primary">
            <img src={Astro.props.img} alt={`${Astro.props.title} icon`} class="h-100 img-fluid card-img" style={opacityStyle}>
            <div class="card-img-overlay">
                <span class="font-weight-bold newsheadertitle">{Astro.props.title}</span>
                <slot/>
            </div>
        </div>
    </a>
</div>
